            "$value": "none"
        },
        "sm": {
            "$type": "shadow",
            "$value": "0 1px 6px 0 rgba(60, 60, 60, 0.10)"
        },
        "md": {
            "$type": "shadow",
            "$value": "0 4px 10px 4px rgba(60, 60, 60, 0.08)"
        },
        "lg": {
            "$type": "shadow",
            "$value": "0 10px 18px 8px rgba(60, 60, 60, 0.08)"
        }
    }
}
